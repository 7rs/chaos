{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        // Dependencies
        "module": "nodenext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "downlevelIteration": true,
        "allowImportingTsExtensions": true,
        // TS Options
        "strictNullChecks": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@layouts/*": ["src/layouts/*"],
            "@components/*": ["src/components/*"],
            "@styles/*": ["src/styles/*"],
            "@assets/*": ["src/assets/*"]
        }
    }
}
