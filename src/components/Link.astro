---
export interface Props {
  href: string;
  title?: string;
  openInNewTab?: boolean;
}

const { href, title, openInNewTab = false, ...props } = Astro.props;
---

<a
  href={href}
  title={title}
  referrerpolicy="no-referrer"
  rel="noopener noreferrer"
  target={openInNewTab ? "_blank" : undefined}
  {...props}
  data-link
>
  <slot />
</a>
