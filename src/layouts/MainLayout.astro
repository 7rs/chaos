---
import { Icon } from "astro-icon/components"

import Header from "./Header.astro";
import Footer from "./Footer.astro";

// import defaultBackground from "../assets/mSbTKLCZ4I0.jpg";
import "../styles/default.sass";

export interface Props {
  title: string;
}

const { title} = Astro.props;

---

<html>
  <head>
    <title>{title}</title>
  </head>
  <body class="relative min-h-screen w-full flex flex-col">
    <Header><Icon name="chaos" /></Header>
    <main class="grow flex flex-col gap-32"><slot /></main>
    <Footer>Licensed by CC0</Footer>
  </body>
</html>

<style lang="sass">
  header
    z-index: 100

  body
    background-color: black

  main
    position: relative

